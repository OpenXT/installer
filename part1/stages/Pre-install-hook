. ${SCRIPT_DIR}/functions

# This preinstall hook runs before "Welcome", which is where
# ${FULL_ANSWERFILE} is parsed into ${ANSWERFILE}, depending on the user
# selection of quick or advanced boot.
#
# This means that we parse from ${FULL_ANSWERFILE} instead of ${ANSWERFILE}.

if answerfile_specifies "preinstall" "${FULL_ANSWERFILE}" ; then
    PRE_INSTALL_SCRIPT=$(mktemp -t)
    extract_script_from_tag "${FULL_ANSWERFILE}" "preinstall" "${PRE_INSTALL_SCRIPT}"

    [ -x "${PRE_INSTALL_SCRIPT}" ] || exit ${Abort}
    "${PRE_INSTALL_SCRIPT}"
    RET="$?"
    rm -f "${PRE_INSTALL_SCRIPT}"
    [ "${RET}" = "0" ] || exit ${Abort}
fi
exit ${Continue}
