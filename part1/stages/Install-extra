. ${SCRIPT_DIR}/functions
. ${SCRIPT_DIR}/Functions/subgraph
. ${SCRIPT_DIR}/Functions/supp-packs

not_previous || exit ${Previous}

run_subgraph "install-extra" <<EOF
PACKAGES_DIR='${INSTALL_SOURCE_DIR}/${PACKAGES_DOT_EXTRA}'
NETWORK_NIC_CONF='${NETWORK_NIC_CONF}'
NETWORK_STATUS_CONF='${NETWORK_STATUS_CONF}'
EOF

OPT=$?

PACK="$(next_pack_to_install)"
mark_pack_installed "${PACK}"

exit ${OPT}
