. ${SCRIPT_DIR}/functions

if answerfile_specifies "eula" ; then

    not_previous || exit ${Previous}

    ACCEPT=$(read_xml_attr "${ANSWERFILE}" "eula" "accept")

    if [ "${ACCEPT}" = "yes" ] ; then
        DEFER_EULA="false"
    elif [ "${ACCEPT}" = "defer" ] ; then
        DEFER_EULA="true"
    else
        echo "Invalid <eula> item in answerfile: aborting" >&2
        exit ${Abort}
    fi

elif interactive ; then

    dialog --msgbox "\n Please review the following license." 7 42 \
           --and-widget \
           --exit-label OK --textbox "${LICENSE_FILE}" 30 60 \
           --and-widget \
           --defaultno --yesno "\n Do you accept this license?" 7 36

    OPT=$?
    [ "$OPT" == "255" ] && exit ${Previous}
    [ "$OPT" != "0" ]   && exit ${Decline}

    DEFER_EULA="false"

else

    echo "Answerfile is missing <eula> item: aborting.">&2
    exit ${Abort}

fi

echo "DEFER_EULA='${DEFER_EULA}'" > "${EULA_CONF}"
exit ${Continue}
