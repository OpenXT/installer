. ${SCRIPT_DIR}/functions
. ${MEASURED_LAUNCH_CONF}

not_previous || exit ${Previous}

if [ "${MEASURE_LAUNCH}" = "true" ]; then
    if ! interactive; then
        echo "ERROR: answerfile specifies that ${PRODUCT_BRAND} Measured" \
             "Launch should be configured but TPM is inactive.  Set your" \
             "TPM to the active state through your system BIOS" \
             "administrative interface." >&2
        exit ${Abort}
    else
        dialog --colors --yes-label "Reboot" --no-label "Continue" --yesno "
 The TPM in your platform is enabled but
 inactive.  Typically this can be fixed
 by setting the TPM to the 'active' state
 through your platform BIOS administrative
 interface.

 ${PRODUCT_BRAND} Measured Launch cannot be
 configured when the TPM is inactive.

 You may \ZbReboot\ZB the system now to activate
 your TPM or \ZbContinue\ZB the installation
 with ${PRODUCT_BRAND} Measured Launch disabled." 18 49
        case $? in
            1) exit ${Continue} ;;
            255) exit ${Previous} ;;
            *) exit ${Abort} ;;
        esac
    fi
else
    exit ${Continue}
fi
