. ${SCRIPT_DIR}/functions

if ! interactive || answerfile_specifies "skipready" ; then
    not_previous || exit ${Previous}
    exit ${Continue}
fi

dialog --extra-button --extra-label "Previous" --ok-label "Continue" --cancel-label Abort --yesno "   Install configuration is complete.

      Proceed with installation?" 8 44

OPT=$?
[ "$OPT" != "0" ] || exit ${Continue}
[ "$OPT" != "3" ] || exit ${Previous}
[ "$OPT" != "255" ] || exit ${Previous}

exit ${Abort}
